{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@screens/*": ["./src/screens/*"],
      "@services/*": ["./src/services/*"],
      "@services": ["./src/services"],
      "@utils/*": ["./src/utils/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@context/*": ["./src/context/*"],
      "@types/*": ["./src/types/*"],
      "@types": ["./src/types"],
      "@styles/*": ["./src/styles/*"],
      "@theme/*": ["./src/theme/*"],
      "@theme": ["./src/theme"],
      "@navigation/*": ["./src/navigation/*"],
      "@config/*": ["./src/config/*"],
      "@stores/*": ["./src/stores/*"],
      "@stores": ["./src/stores"],
      "@constants/*": ["./src/constants/*"],
      "@test-utils/*": ["./src/test-utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "src/utils/documentation/**/*"
  ]
}