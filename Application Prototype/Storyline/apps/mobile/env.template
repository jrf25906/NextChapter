# Storyline Mobile App - Environment Configuration
# Copy this file to .env and replace 'your_key_here' with your actual API keys

# AssemblyAI - Speech-to-Text Service
# Get your key at: https://www.assemblyai.com/
EXPO_PUBLIC_ASSEMBLYAI_API_KEY=your_key_here

# OpenAI - Conversational AI (GPT-4, Realtime API)
# Get your key at: https://platform.openai.com/api-keys
EXPO_PUBLIC_OPENAI_API_KEY=your_key_here
EXPO_PUBLIC_OPENAI_ORG_ID=your_org_id_here

# Claude AI - Alternative conversational AI
# Get your key at: https://console.anthropic.com/
EXPO_PUBLIC_ANTHROPIC_API_KEY=your_key_here

# Deepgram - Alternative speech-to-text and TTS
# Get your key at: https://console.deepgram.com/
EXPO_PUBLIC_DEEPGRAM_API_KEY=your_key_here

# Firebase - Authentication and database
# Get from Firebase Console: https://console.firebase.google.com/
EXPO_PUBLIC_FIREBASE_API_KEY=your_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id_here
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id_here

# Supabase - Alternative to Firebase
# Get from Supabase Dashboard: https://app.supabase.com/
EXPO_PUBLIC_SUPABASE_URL=your_supabase_url_here
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Chroma DB - Vector database for memory system
# Can be self-hosted or use Chroma Cloud
EXPO_PUBLIC_CHROMA_URL=your_chroma_url_here
EXPO_PUBLIC_CHROMA_API_KEY=your_chroma_key_here

# Environment Configuration
EXPO_PUBLIC_ENV=development
EXPO_PUBLIC_LOG_LEVEL=debug

# Optional: Analytics and Monitoring
EXPO_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
EXPO_PUBLIC_ANALYTICS_ID=your_analytics_id_here