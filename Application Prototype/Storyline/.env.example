# Storyline Backend Services - Environment Configuration
# Copy this file to .env and replace example values with your actual keys

# Node Environment
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/storyline
REDIS_URL=redis://localhost:6379

# Authentication
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Firebase Admin SDK (for auth)
FIREBASE_PROJECT_ID=your_project_id_here
FIREBASE_PRIVATE_KEY=your_private_key_here
FIREBASE_CLIENT_EMAIL=your_client_email_here

# AI Services
OPENAI_API_KEY=your_openai_key_here
OPENAI_ORG_ID=your_org_id_here
ANTHROPIC_API_KEY=your_anthropic_key_here

# Voice Processing Services
ASSEMBLYAI_API_KEY=your_assemblyai_key_here
DEEPGRAM_API_KEY=your_deepgram_key_here

# Vector Database
CHROMA_URL=http://localhost:8000
CHROMA_API_KEY=your_chroma_key_here

# Graph Database (for Graph RAG)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Object Storage (for voice recordings and documents)
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=storyline-storage

# Monitoring and Logging
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Service Discovery (if using Kubernetes)
SERVICE_DISCOVERY_NAMESPACE=storyline
API_GATEWAY_URL=http://localhost:3000
AUTH_SERVICE_URL=http://localhost:3001
AI_ORCHESTRATOR_URL=http://localhost:3002
VOICE_PROCESSING_URL=http://localhost:3003
MEMORY_SERVICE_URL=http://localhost:3004

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081